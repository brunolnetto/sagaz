{
  "dashboard": {
    "title": "Sage - Outbox Pattern",
    "tags": ["sage", "outbox", "messaging"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "title": "Outbox Pending Events",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "outbox_pending_events_total",
            "legendFormat": "Pending",
            "refId": "A"
          },
          {
            "expr": "outbox_processing_events_total",
            "legendFormat": "Processing",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Events"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5000], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Outbox Backlog Alert"
        }
      },
      {
        "title": "Event Publish Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(outbox_published_events_total[5m])",
            "legendFormat": "Published",
            "refId": "A"
          },
          {
            "expr": "rate(outbox_failed_events_total[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Events/sec"},
          {"format": "short"}
        ]
      },
      {
        "title": "Publish Success Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(outbox_published_events_total[5m])) / (sum(rate(outbox_published_events_total[5m])) + sum(rate(outbox_failed_events_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 98, "color": "yellow"},
                {"value": 99.5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Dead Letter Queue",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(outbox_dead_letter_events_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Worker Health",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(up{job=\"outbox-worker\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Average Publish Latency",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(outbox_publish_duration_seconds_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 0.5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Publish Latency Distribution (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(outbox_publish_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(outbox_publish_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(outbox_publish_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "title": "Retry Distribution",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (retry_count) (outbox_retry_attempts_total)",
            "legendFormat": "Retry {{ retry_count }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Attempts"},
          {"format": "short"}
        ]
      },
      {
        "title": "Events by State",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (state) (outbox_events_by_state)",
            "legendFormat": "{{ state }}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Optimistic Send Performance",
        "type": "graph",
        "gridPos": {"x": 8, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(outbox_optimistic_send_attempts_total[5m])",
            "legendFormat": "Attempts",
            "refId": "A"
          },
          {
            "expr": "rate(outbox_optimistic_send_failures_total[5m])",
            "legendFormat": "Failures",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Rate"},
          {"format": "short"}
        ]
      },
      {
        "title": "Worker CPU Usage",
        "type": "graph",
        "gridPos": {"x": 16, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"outbox-worker.*\"}[5m])",
            "legendFormat": "{{ pod }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "CPU"},
          {"format": "short"}
        ]
      },
      {
        "title": "Worker Memory Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{pod=~\"outbox-worker.*\"}",
            "legendFormat": "{{ pod }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "title": "Batch Processing Metrics",
        "type": "graph",
        "gridPos": {"x": 12, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(outbox_batch_processed_total[5m])",
            "legendFormat": "Batches/sec",
            "refId": "A"
          },
          {
            "expr": "avg(outbox_batch_size)",
            "legendFormat": "Avg Batch Size",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ]
      }
    ]
  }
}
